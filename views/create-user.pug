extends layout

block content

  div.row
    div.col-sm-4
      h3.white-words Create User Account

  div.col-md-10
    form.bookstore-form( action="/users/siginup", method="post" )
      div.row.form-group
        label.col-sm-4.control-label.form-group.white-words( for="userEmail" ) Email
        input.form-control.form-group#userEmail( type="email", placeholder="Email" )
      div.row.form-group
        label.col-sm-4.control-label.form-group.white-words( for="userPassword" ) Password
        input.form-control.form-group#userPassword( type="password", placeholder="Password" )
      div.row.form-group
        div.col-md-4.col-md-offset-3
          button.btn.btn-primary( type="submit" ) Create Account
