extends layout

block content

  form.form-inline( action="/users/signup", method="post" )
    div.row
      div.form-group
        label.col-sm-4.control-label( for="userEmail" ) Email
        div.col-sm-10
          input.form-control#userEmail( type="email", placeholder="Email", name="email")
      div.form-group
        label.col-sm-4.control-label( for="userPassword" ) Password
        div.col-sm-10
          input.form-control#userPassword( type="password", placeholder="Password", name="password" )
    div.row
      div.col-md-4.col-md-offset-3
        button.btn.btn-primary( type="submit" ) Create Account
