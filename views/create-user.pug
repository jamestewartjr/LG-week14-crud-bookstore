extends layout

block content

  div.row
    div.col-sm-2
      h3.white-words Create User Account

  form.form-inline( action="/users/siginup", method="post" )
    div.row
      div.form-group
        label.col-sm-4.control-label( for="userEmail" ) Email
        div.col-sm-10
          input.form-control#userEmail( type="email", placeholder="Email" )
      div.form-group
        label.col-sm-4.control-label( for="userPassword" ) Password
        div.col-sm-10
          input.form-control#userPassword( type="password", placeholder="Password" )
    div.row
      div.col-md-4.col-md-offset-3
        button.btn.btn-primary( type="submit" ) Create Account
