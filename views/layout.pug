doctype html
html
  head
    title "Simple Book Store"
    link( rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous" )
    link( rel="stylesheet", href="/stylesheets/style.css" )

  body
    div.container-fluid
      div.row
        div.col-md-6.col-md-offset-10
          div.user-login
            h4.h4 User Stuff
        div.col-md-6
          a( href="/" )
            h1.h1.app-title Simple Book Store
    div.row
      div.col-xl-3
        br


    div.row
      div.col-md-6.col-md-offset-9
        a.btn.btn-default( href="/book/add" ) Add Book
        a.btn.btn-default( href="/author/add" ) Add Author
      div.col-md-6.col-md-offset-10
        form.search( action="#", method="#" )
          input( name="search-query", placeholder="Search Books Here", type="text" )
          input( type="submit" value="Submit")


    block content
