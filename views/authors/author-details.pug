extends ../layout

block content

  div.row
    div.col-md-5
      img.img-responsive( src="https://i.ytimg.com/vi/RHnsDSh8-8w/hqdefault.jpg" )
    div.col-md-5
      div.row
        div.col-md-7
          h2.h2.white-words= author.name
      div.row
        div.col-md-12
          strong.white-words Bio and stuff bout the author.


  div.row
    div.col-md-4
      h5.white-words Some books by author
    div.col-md-2.col-md-offset-8
      a.btn.btn-default( href="/authors/edit" ) Update Author
  div.row
    div.author-books
      - for ( let i = 4; i > 0; i-- ) {
        div.col-md-3
          a( href="/authors/details" )
            img.img-responsive( src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS9JKurHW69MeQsEB3ErEZkLHzWbnub-Ulwru-VzcXZGpaytPrQlw" )
      - }
